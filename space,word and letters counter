mystmntlnth=int(len(mystmnt))
def wordcount(arg1,arg2):
    spacecounter=1
    
    for i in arg1:
        for i in range(arg2):
            if i ==" ":
                spacecounter=spacecounter-1
                
        #return spacecounter
        result=arg2-spacecounter
    return result
print(wordcount(mystmnt,mystmntlnth))
